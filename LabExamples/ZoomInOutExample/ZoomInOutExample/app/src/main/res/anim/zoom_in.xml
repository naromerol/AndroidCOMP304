<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!--For Zoom In animation, we need to set android:pivotX="50%" and android:pivotY="50%"
    to perform the zoom from centre of the element.
    Also we need to use fromXScale, fromYScale attributes to define the scaling of object
    and we need keep these value lesser than toXScale, toYScale -->
    <scale
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:duration="1000"
        android:fromXScale="2"
        android:fromYScale="2"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="4"
        android:toYScale="4" >
    </scale>

</set>